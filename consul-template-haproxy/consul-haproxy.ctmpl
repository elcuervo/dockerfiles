global
    maxconn {{key "service/haproxy/maxconn"}}
    user haproxy
    group haproxy
    pidfile /var/run/haproxy.pid

defaults
    mode {{key "service/haproxy/mode"}}
    {{range ls "service/haproxy/timeouts"}}
    timeout {{.Key}} {{.Value}}
    {{end}}

listen http-in
    bind *:80
    option forwardfor
    balance roundrobin
    {{range service "release.webapp"}}
    server {{.Node}} {{.Address}}:{{.Port}}
    {{end}}
